// Prisma schema for Acasting Social Publisher
// Local dev: SQLite  |  Production (Vercel): PostgreSQL

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
  // For local development with SQLite, comment the above and uncomment:
  // provider = "sqlite"
  // url      = env("DATABASE_URL")
}

model ProcessedJob {
  id             String    @id @default(cuid())
  jobId          String    @unique
  title          String
  description    String?
  salary         String?
  city           String?
  expiryDate     String?
  slugOrId       String    @default("")
  category       String?
  originalImage  String?
  generatedImage String?
  style          String    @default("dark")
  status         String    @default("pending")
  publishedTo    String?   // JSON array of platform strings
  publishedAt    DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}
